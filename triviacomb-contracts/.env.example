# TriviaComb Deployment Configuration

# Solana Cluster Configuration
SOLANA_CLUSTER=devnet
ANCHOR_WALLET=/Users/your-username/.config/solana/id.json
PROGRAM_KEYPAIRS_PATH=./keys

# Admin Configuration
ADMIN_AUTHORITY=your_admin_pubkey_here
ADMIN_PRIVATE_KEY=your_admin_private_key_here
INITIAL_CURATORS=curator1_pubkey,curator2_pubkey,curator3_pubkey

# Program Configuration
QUESTION_BANK_PROGRAM_ID=QuestionBankProgram111111111111111111111111
TOURNAMENT_MANAGER_PROGRAM_ID=TournamentManagerProgram111111111111111111
REWARD_DISTRIBUTOR_PROGRAM_ID=RewardDistributorProgram111111111111111111

# Honeycomb Integration
HONEYCOMB_PROJECT_ID=your_honeycomb_project_id
HONEYCOMB_PROFILE_API=https://api.honeycomb.io/v1
HONEYCOMB_ENABLE_INTEGRATION=true

# Deployment Configuration
DEPLOYMENT_CONFIRMATION_BLOCKS=32
DEPLOYMENT_TIMEOUT=60000
DEPLOYMENT_SKIP_CONFIRMATION=false
DEPLOYMENT_RETRY_COUNT=3

# Initial Pool Configuration
INITIAL_REWARD_POOL_SIZE=1000000000000
INITIAL_CURATOR_REPUTATION=1000
INITIAL_USER_REPUTATION=100

# Network Specific Settings
# Local
LOCAL_VALIDATOR_URL=http://localhost:8899
LOCAL_VALIDATOR_LEDGER_PATH=./ledger

# Devnet
DEVNET_URL=https://api.devnet.solana.com
DEVNET_COMMITMENT=confirmed

# Mainnet
MAINNET_URL=https://api.mainnet-beta.solana.com
MAINNET_COMMITMENT=finalized
MAINNET_REQUIRE_MULTISIG=true
MAINNET_MULTISIG_THRESHOLD=2
MAINNET_MULTISIG_SIGNERS=signer1_pubkey,signer2_pubkey,signer3_pubkey
MAINNET_MULTISIG_PDA=multisig_pda_pubkey

# Token Configuration
TOKEN_MINT_DECIMALS=6
TOKEN_INITIAL_SUPPLY=1000000000000000
REWARD_TOKEN_MINT=your_reward_token_mint_pubkey

# Gas and Fee Configuration
PRIORITY_FEE_LAMPORTS=10000
COMPUTE_UNIT_LIMIT=400000
COMPUTE_UNIT_PRICE=1000

# Security Configuration
ENABLE_SECURITY_CHECKS=true
REQUIRE_UPGRADE_AUTHORITY_VALIDATION=true
ENABLE_EMERGENCY_PAUSE=true
TIME_DELAY_HOURS=24

# Monitoring and Alerting
ENABLE_MONITORING=true
ENABLE_ALERTING=true
ALERT_WEBHOOK_URL=https://your-webhook-url.com
METRICS_ENDPOINT=https://your-metrics-endpoint.com

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/deployment.log